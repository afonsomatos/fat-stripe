{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "incremental": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/*.generated.ts" , "dist"]
}